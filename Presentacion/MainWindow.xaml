<Window x:Class="Presentacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid Name="dgSimple"></DataGrid>
        <Button Content="Crear" Click="Crear_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Button Content="Actualizar" Click="Actualizar_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,10,0,0"/>
        <Button Content="Eliminar" Click="Eliminar_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,10,0,0"/>
    </Grid>

</Window>
